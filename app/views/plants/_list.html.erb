
<div class="row" data-search-plants-target="list">
  <% @plants.each do |plant| %>
    <div class="col">
      <div class="plant-cards">
        <%= link_to plant_path(plant), class:"link-dark text-decoration-none" do %>
          <div class="plant-card-single">
            <%= cl_image_tag plant.photo.key, width: 150, height: 150, crop: :fill, :style => "border-radius: 10px"%>
            <div class="plant-infos">
              <h2><strong><%= plant.name %></strong></h2>
              <p><%= plant.description.truncate(140) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
