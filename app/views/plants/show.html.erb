<div id="plant-show">
<% @plant = @plant %>
  <div style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.35)), url(<%= cl_image_path(@plant.photo.key, crop: :fill) %>);" class="plant-img">
      <a href="/plants"><i class="fas fa-angle-left fa-3x"></i></a>
  </div>

    <div class="container">

      <div class="plant-name">
        <h1><%= @plant.name %></h1>
        <h2><%= @plant.scientific_name %></h2>
      </div>
      <div class="container-plant-scroll">
        <div class="plant-card d-flex flex-column justify-content-center align-items-center">
          <span><i class="fas fa-tint fa-2x flex-grow-1"></i></span>
          <p><%= @plant.baseline_hygrometry%></p>
        </div>
        <div class="plant-card d-flex flex-column justify-content-center align-items-center">
          <span><i class="fas fa-temperature-high fa-2x"></i></span>
          <p><%= @plant.min_baseline_temperature%> - <%= @plant.max_baseline_temperature%> Â°C</p>
        </div>
        <div class="plant-card d-flex flex-column justify-content-center align-items-center">
          <span><i class="fas fa-sun fa-2x"></i></span>
          <p><%= @plant.light_level%></p>
        </div>
        <div class="plant-card d-flex flex-column justify-content-center align-items-center">
          <span><i class="fas fa-hand-holding fa-2x"></i></span>
          <p><%= @plant.care_level%></p>
        </div>
      </div>


      <div class="plant-description">
        <h3>Description</h3>
        <p><%= @plant.description %></p>
      </div>

      <div class="col d-flex justify-content-center">
        <button type="button" class="btn dark-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Add to my garden
        </button>
      </div>

    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title" id="exampleModalLabel">Choose your room</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body col d-flex justify-content-center">
          <%= simple_form_for([:my_garden, @plant, @user_plant]) do |f| %>
              <%= hidden_field_tag "user_plant[user_id]", current_user.id %>
              <%= hidden_field_tag "user_plant[plant_id]", @plant.id %>
              <%= f.input :room, collection: UserPlant::ROOMS, as: :radio_buttons, class:'radio-btn'  %>
              <%= f.button :submit, 'Add to my garden', class:'dark-btn' %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
