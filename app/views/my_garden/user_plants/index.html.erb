
<div class="header" style="background-image: url(https://res.cloudinary.com/lucas-vittaz/image/upload/v1654261599/development/header-garden-linear-gradient.png)">
  <a href="/"><i class="back-arrow fas fa-angle-left fa-4x"></i></a>
  <h1>My Garden</h1>
</div>
 <p class="text-center">Look trought your rooms, and find your favorite plants </p>
<div class="container-room-scroll" data-controller="scroll-bar" data-scroll-bar-target="container">
    <%= link_to my_garden_user_plants_path, class:"link", data: {"data-action": "click->scroll-bar#highlight"} do %>
      <% if params[:room].present? %>
        <div class="room-card"  data-scroll-bar-target="room home">
        <div class="align-room-card-content">
            <%= image_tag("home.png", :width=>50, :height=>50) %>
            <p>Home</p>
        </div>
      </div>
      <% else %>
      <div class="room-card active"  data-scroll-bar-target="room home">
        <div class="align-room-card-content">
            <%= image_tag("home.png", :width=>50, :height=>50) %>
            <p>Home</p>
        </div>
      </div>
      <% end %>
    <% end%>

  <% UserPlant::ROOMS.each do |room| %>
    <%= link_to my_garden_user_plants_path(room: room), class:"link", data: {"data-action": "click->scroll-bar#highlight"}  do %>
      <div class="room-card <%= (params[:room].present?) && params[:room] == room.to_s ? 'active' : '' %>" data-scroll-bar-target="room">
        <div class="align-room-card-content">
            <%= image_tag("#{room.to_s}.png", :width=>50, :height=>50) %>
            <p class="room-title"><%= room.to_s.humanize%></p>
        </div>
      </div>
    <% end%>
  <% end %>
</div>



<div class="container">
  <% @user_plants.each do |user_plant| %>
    <div class="plant-cards">
      <%= link_to my_garden_user_plant_path(user_plant), class: "link-dark text-decoration-none" do %>
        <div class="plant-card-single">
          <%= cl_image_tag user_plant.plant.photo.key, width: 150, height: 150, crop: :fill, :style => "border-radius: 10px"%>
          <div class="plant-infos">
            <h2><strong><%= user_plant.plant.name %></strong></h2>
            <p><%= user_plant.plant.description.truncate(140) %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
