<div id="plant-show">
  <div style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(<%= cl_image_path(@user_plant.plant.photo.key, crop: :fill) %>);" class="plant-img">
      <a href="/my_garden/user_plants "><i class="fas fa-angle-left fa-5x"></i></a>
      <h1><%= @user_plant.plant.name %></h1>
      <h2><%= @user_plant.plant.scientific_name %></h2>
  </div>


    <div class="container">

      <div class="container-plant-scroll">
        <div class="plant-card d-flex flex-column">
          <span><i class="fas fa-tint"></i></span>
          <p><%= @user_plant.plant.baseline_hygrometry%></p>
        </div>
        <div class="plant-card d-flex flex-column">
          <span><i class="fas fa-temperature-high"></i></span>
          <p><%= @user_plant.plant.min_baseline_temperature%> - <%= @user_plant.plant.max_baseline_temperature%> Â°C</p>
        </div>
        <div class="plant-card d-flex flex-column">
          <span><i class="fas fa-adjust"></i></span>
          <p><%= @user_plant.plant.light_level%></p>
        </div>
        <div class="plant-card d-flex flex-column">
          <span><i class="fas fa-hand-holding"></i></span>
          <p><%= @user_plant.plant.care_level%></p>
        </div>
      </div>

      <div class="plant-description">
        <h3>Description</h3>
        <p><%= @user_plant.plant.description %></p>
      </div>

    </div>
  </div>
  <button type="button" class="dark-btn" data-bs-toggle="modal" data-bs-target="#edit-plant">
  Change room
</button>

  <!-- Modal -->

  <div class="modal fade" id="edit-plant" tabindex="-1" aria-labelledby="edit-plantLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="edit-plantLabel">Select a new room</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="small-modal-body">
        <%= form_with url: my_garden_user_plants_path, method: :patch do |f| %>
          <%= f.select :room, UserPlant::ROOMS %>
          <%= f.submit %>
          <% end %>
      </div>
      <div class="small-modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>

</div>
