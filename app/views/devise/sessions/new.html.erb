<div id="log-in">
  <div class="header-img">
    <span><h1>Feed my plant</h1></span>
    <span><h2>Stop your plant<br> from dying</h2></span>
  </div>
   <div class="container-fluid">
    <div class="row">
      <div class="col">
        <h1 class="dark-h1">Log in</h1>
      </div>
    </div>
    <div class="row">
      <div class="col d-flex justify-content-center">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: 'Enter your Email',
                        input_html: { autocomplete: "email", class:'input' } %>
            <%= f.input :password,
                        required: false,
                        placeholder: 'Enter your Password',
                        class:'input',
                        input_html: { autocomplete: "current-password", class:'input' } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class:'dark-btn' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col d-flex justify-content-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
